<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#260559">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#53e7ec">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s1"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#fff">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/s2"
                android:layout_weight="5"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text=""
                android:layout_weight="1"
                android:background="#260559"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="80dp"
                android:src="@drawable/s3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text=""
                android:layout_weight="1"
                android:background="#260559"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:src="@drawable/s4"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:background="#fff">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:src="@drawable/s5"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text=""
            android:layout_weight="1"
            android:background="#260559"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:src="@drawable/s6"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text=""
            android:layout_weight="1"
            android:background="#260559"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:src="@drawable/s7"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#260559">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#4ceb69">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:src="@drawable/s8"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#53e7ec"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:src="@drawable/s9"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>